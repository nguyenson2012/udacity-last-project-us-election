<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="representative"
            type="com.udacity.election.representative.model.Representative" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgview_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_profile"
            app:imageUrl="@{representative.official.photoUrl}" />
        <TextView
            android:id="@+id/tv_office_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@{representative.office.name}"
            app:layout_constraintStart_toEndOf="@+id/imgview_avatar"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_official_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@{representative.official.name}"
            app:layout_constraintLeft_toLeftOf="@+id/tv_office_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_office_name"/>
        <TextView
            android:id="@+id/tv_party_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@{representative.official.party}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_official_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_official_name"/>
        <ImageView
            android:id="@+id/imgview_twitter"
            android:layout_width="@dimen/img_social_margin"
            android:layout_height="@dimen/img_social_margin"
            android:layout_marginRight="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_twitter"/>
        <ImageView
            android:id="@+id/imgview_facebook"
            android:layout_width="@dimen/img_social_margin"
            android:layout_height="@dimen/img_social_margin"
            android:layout_marginRight="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imgview_twitter"
            app:srcCompat="@drawable/ic_facebook"/>
        <ImageView
            android:id="@+id/imgview_web"
            android:layout_width="@dimen/img_social_margin"
            android:layout_height="@dimen/img_social_margin"
            android:layout_marginRight="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imgview_facebook"
            app:srcCompat="@drawable/ic_www"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
